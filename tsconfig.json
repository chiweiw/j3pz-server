{
    "compilerOptions": {
      "target": "es2016",
      "lib": ["es2016"],
      "typeRoots": [
        "./node_modules/@types"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators":true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "outDir": "dist",
      "sourceMap": true
    },
    "exclude": [
      "node_modules"
    ]
  }
